@{
    ViewData["Title"] = "Home";
}
<div class="text-center">
    @if (ViewBag.estaLogueado)
    {
        <button id="contadorActividades" class="position-fixed fs-4 text-white p-2 rounded cursor-pointer" style="z-index:10; top:50px; left:20px; background-color: mediumpurple; min-width:50px;" data-bs-toggle="modal" data-bs-target="#exampleModal">
            0
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Actividades</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @foreach(var actividad in ViewBag.Actividades)
                            {
                            <form asp-controller="Actividades" asp-action="Unirse" method="post" style="margin-bottom:10px;">
                                <input type="hidden" name="idActividad" value="@actividad.Id" />
                                <input type="hidden" name="idUsuario" value="@ViewBag.usuario.Id" />
                                <button type="submit" class="btn btn-primary w-100">@actividad.MensajeDelAnfitrion --> ¡Únete!</button>
                            </form>
                            }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.actividad != null)
        {
            <div id="indicadorActividad" class="position-fixed fs-4 text-white p-2 rounded" style="z-index:10; top:100px; left:20px; background-color: mediumpurple; min-width:50px;">
                Act
            </div>
        }

        <div id="map" style="z-index:1"></div>

        <script src="~/js/cargarMapa.js"></script>
    }
    else
    {
        <a href="/Sesion">Iniciar Sesion</a>
        <span>o</span>
        <a href = "/Sesion/Registrarse" > Registrarse </a>
        <span>o</span>
        <a href="/Sesion/RegistroAnfitrion"> Registrate como anfitrion </a>
    }
</div>
